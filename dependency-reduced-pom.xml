<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.heliosapm.eep</groupId>
  <artifactId>eep</artifactId>
  <name>Helios :: EEP</name>
  <version>1.0-SNAPSHOT</version>
  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>${eclipse-plugin.version}</version>
        <configuration>
          <downloadJavadocs>true</downloadJavadocs>
          <downloadSources>true</downloadSources>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${jar-plugin.version}</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <addClasspath>true</addClasspath>
            </manifest>
            <manifestEntries />
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>log4j:log4j:jar:</exclude>
                  <exclude>org.slf4j:*:jar:</exclude>
                  <exclude>org.codehaus.groovy:*:jar:</exclude>
                  <exclude>META-INF/*.SF</exclude>
                  <exclude>META-INF/*.DSA</exclude>
                  <exclude>META-INF/*.RSA</exclude>
                </excludes>
                <includes />
              </artifactSet>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <includePluginDependencies>false</includePluginDependencies>
              <transformers>
                <transformer />
                <transformer>
                  <resource>.SF</resource>
                  <resource>.DSA</resource>
                  <resource>.RSA</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-all</artifactId>
      <version>2.3.6</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.2</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <javadoc-plugin.version>2.9</javadoc-plugin.version>
    <shade.version>2.1</shade.version>
    <jmx-optional.version>1.0-b02-SNAPSHOT</jmx-optional.version>
    <gson.version>2.2.2</gson.version>
    <jar-plugin.version>2.4</jar-plugin.version>
    <h2.version>1.3.168</h2.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javassist.version>3.18.2-GA</javassist.version>
    <junit.version>4.8.2</junit.version>
    <netty.version>3.9.4.Final</netty.version>
    <groovy.version>2.3.6</groovy.version>
    <rrd4j.version>2.2-SNAPSHOT</rrd4j.version>
    <trove.version>3.0.3</trove.version>
    <compiler-target.version>1.6</compiler-target.version>
    <logback.version>1.1.2</logback.version>
    <slf4j.version>1.7.2</slf4j.version>
    <guava.version>17.0</guava.version>
    <source-plugin.version>2.2</source-plugin.version>
    <json.version>20090211</json.version>
    <high-scale-lib.version>1.1.4</high-scale-lib.version>
    <surefire.version>2.16</surefire.version>
    <cobertura.version>2.5.1</cobertura.version>
    <compiler-source.version>1.6</compiler-source.version>
    <eclipse-plugin.version>2.9</eclipse-plugin.version>
  </properties>
</project>

